.fei-notice {
  position: fixed;
  width: 335px;
  padding: 16px 24px;
  border-radius: var(--fei-border-base-radius);
  box-sizing: border-box;
  background-color: var(--fei-color-white);
  box-shadow: 0 3px 6px -4px rgba(0, 0, 0, 0.12), 0 6px 16px 0 rgba(0, 0, 0, 0.08), 0 9px 28px 8px rgba(0, 0, 0, 0.05);
  transition: opacity .3s, transform .3s, left .3s, right .3s, top .4s, bottom .3s;
  overflow: hidden;
  z-index: 9999;
  &.right {
    right: 24px;
  }

  &.left {
    left: 24px;
  }

  .f-iconfont.b-icon-close {
    position: absolute;
    top: 18px;
    right: 15px;
    cursor: pointer;
    color: var(--fei-color-text-secondary);
    font-size: 16px;
    &:hover {
      color: var(--fei-color-text-primary);
    }
  }

  .fei-notice__title {
    display: inline-block;
    color: var(--fei-color-text-primary);
    font-size: 16px;
    line-height: 24px;
    padding-right: 24px;
    font-weight: 500;
  }
  .fei-notice__content {
    font-size: 14px;
    margin-top: 6px;
    line-height: 24px;
    color: var(--fei-color-text-default);
    text-align: justify;
  }
  .fei-notice__group.is-with-icon {
    margin-left: 40px;
  }
  .fei-notice__icon {
    position: absolute;
    top: 24;
    font-size: 24px;
    &.is-success {
      color: var(--fei-color-success);
    }
    &.is-info {
      color: var(--fei-color-primary);
    }
    &.is-warning {
      color: var(--fei-color-warning);
    }
    &.is-error {
      color: var(--fei-color-danger);
    }
  }

}

.fei-notice-fade-enter-from {
  &.right {
    right: 0;
    transform: translateX(100%);
  }

  &.left {
    left: 0;
    transform: translateX(-100%);
  }
}

.fei-notice-fade-leave-to {
  opacity: 0;
  &.right {
    transform: translateX(100%);
  }

  &.left {
    transform: translateX(-100%);
  }
}

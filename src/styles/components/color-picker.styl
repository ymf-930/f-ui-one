circle-dot() {
  cursor: head;
  width: 4px;
  height: 4px;
  box-shadow: 0 0 0 1.5px #fff, inset 0 0 1px 1px rgba(0, 0, 0, 0.3), 0 0 1px 2px rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  transform: translate(-2px, -2px);
}

active() {
  border-color: var(--fei-color-primary);
  outline: 0;
  box-shadow: 0 0 0 2px var(--fei-color-input-shadow);
}

.fei-color-picker {
  position: relative;
  display: inline-flex;
  align-items: center;
  line-height: normal;
  height: var(--fei-default-height);
  width: var(--fei-default-height);
  &__trigger {
    display: inline-block;
    box-sizing: border-box;
    height: var(--fei-default-height);
    width: 100%;
    padding: 3px;
    border: var(--fei-border-base);
    border-radius: var(--fei-border-base-radius);
    font-size: 0;
    position: relative;
    cursor: pointer;
  }
  &__label {
    height: 100%;
    cursor: pointer;
    border: var(--fei-border-base);
    border-radius: var(--fei-border-base-radius);
    border-left: none;
    padding: 0 8px;
    min-width: 85px;
    line-height: var(--fei-default-height-2);
  }
  &__color {
    position: relative;
    display: block;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    text-align: center;
    &.is-alpha {
      background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAwAAAAMCAIAAADZF8uwAAAAGUlEQVQYV2M4gwH+YwCGIasIUwhT25BVBADtzYNYrHvv4gAAAABJRU5ErkJggg==');
    }
    &-inner {
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      border-radius: var(--fei-border-base-radius);
      box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.15);
    }
  }
  &--large {
    height: var(--fei-large-height);
    width: var(--fei-large-height);
    .fei-color-picker__trigger {
      height: var(--fei-large-height);
    }
    .fei-color-picker__label {
      line-height: var(--fei-large-height-2);
    }
  }
  &--small {
    height: var(--fei-small-height);
    width: var(--fei-small-height);
    .fei-color-picker__trigger {
      height: var(--fei-small-height);
    }
    .fei-color-picker__icon, .fei-color-picker__empty {
      transform: translate3d(-50%, -50%, 0) scale(0.8);
    }
    .fei-color-picker__label {
      line-height: var(--fei-small-height-2);
    }
  }
  &--mini {
    height: var(--fei-mini-height);
    width: var(--fei-mini-height);
    .fei-color-picker__trigger {
      height: var(--fei-mini-height);
    }
    .fei-color-picker__icon, .fei-color-picker__empty {
      transform: translate3d(-50%, -50%, 0) scale(0.8);
    }
    .fei-color-picker__label {
      line-height: var(--fei-mini-height-2);
    }
  }
  &__mask {
    border-radius: var(--fei-border-base-radius);
    position: absolute;
    top: 1px;
    left: 1px;
    bottom: 1px;
    right: 1px;
    z-index: 1;
    cursor: not-allowed;
    background-color: rgba(255, 255, 255, .7);
  }
  &.show-label {
    width: auto;
    .fei-color-picker__trigger {
      width: var(--fei-default-height);
    }
    &.fei-color-picker--large .fei-color-picker__trigger {
      width: var(--fei-large-height);
    }
    &.fei-color-picker--small .fei-color-picker__trigger {
      width: var(--fei-small-height);
    }
    &.fei-color-picker--mini .fei-color-picker__trigger {
      width: var(--fei-mini-height);
    }
  }
}

// popper.md
.fei-color-picker__panel {
  position: absolute;
  z-index: 10;
  padding: 6px;
  box-sizing: content-box;
  background-color: var(--fei-color-white);
  border-radius: var(--fei-border-base-radius);
  box-shadow: var(--fei-shadow-down);
  &.fei-popper {
    &.is-light {
      border: none;
    }
  }
  &.fei-color-dropdown {
    width: 300px;
  }

  .fei-color-dropdown__main-wrapper {
    margin-bottom: 6px;
    &::after {
      content: "";
      display: table;
      clear: both;
    }
  }
  // 色彩条
  .fei-color-hue-slider {
    position: relative;
    box-sizing: border-box;
    width: 280px;
    height: 12px;
    background-color: #f00;
    padding: 0 2px;
    float: right;
    &__bar {
      position: relative;
      background: linear-gradient(
              to right, #f00 0%,
              #ff0 17%, #0f0 33%,
              #0ff 50%, #00f 67%,
              #f0f 83%, #f00 100%);
      height: 100%;
    }
    &__thumb {
      position: absolute;
      cursor: pointer;
      box-sizing: border-box;
      left: 0;
      top: 0;
      width: 4px;
      height: 100%;
      border-radius: 1px;
      background: #fff;
      border: 1px solid #f0f0f0;
      box-shadow: 0 0 2px rgba(0, 0, 0, 0.6);
      z-index: 1;
    }
    &.is-vertical {
      width: 12px;
      height: 180px;
      padding: 2px 0;
      .fei-color-hue-slider__bar {
        background: linear-gradient(
                to bottom, #f00 0%,
                #ff0 17%, #0f0 33%,
                #0ff 50%, #00f 67%,
                #f0f 83%, #f00 100%);
      }
      .fei-color-hue-slider__thumb {
        left: 0;
        top: 0;
        width: 100%;
        height: 4px;
      }
    }
  }

  // 透明条
  .fei-color-alpha-slider {
    position: relative;
    box-sizing: border-box;
    width: 280px;
    height: 12px;
    background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAwAAAAMCAIAAADZF8uwAAAAGUlEQVQYV2M4gwH+YwCGIasIUwhT25BVBADtzYNYrHvv4gAAAABJRU5ErkJggg==');
    &__bar {
      position: relative;
      background: linear-gradient(
              to right, rgba(255, 255, 255, 0) 0%,
              rgba(255, 255, 255, 1) 100%);
      height: 100%;
    }
    &__thumb {
      position: absolute;
      cursor: pointer;
      box-sizing: border-box;
      left: 0;
      top: 0;
      width: 4px;
      height: 100%;
      border-radius: 1px;
      background: #fff;
      border: 1px solid #f0f0f0;
      box-shadow: 0 0 2px rgba(0, 0, 0, 0.6);
      z-index: 1;
    }
    &.is-vertical {
      width: 20px;
      height: 180px;
      .fei-color-alpha-slider__bar {
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
      }
      .fei-color-alpha-slider__thumb {
        left: 0;
        top: 0;
        width: 100%;
        height: 4px;
      }
    }
  }

  // 色块
  .fei-color-predefine {
    display: flex;
    font-size: 12px;
    margin-top: 8px;
    width: 280px;
    &__colors {
      display: flex;
      flex: 1;
      flex-wrap: wrap;
      .fei-color-predefine__color-selector {
        display: inline;
        width: 16px;
        height: 16px;
        margin: 2px;
        float: left;
        position: relative;
        > div {
          outline: 0;
          display: block;
          position: absolute;
          width: 16px;
          height: 16px;
          cursor: pointer;
          border-radius: 2px;
          box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.15);
        }
        &.selected {
          > div::after {
            content: '';
            circle-dot();
            position: absolute;
            top: 8px;
            left: 8px;
            cursor: pointer;
          }
        }
        &.is-alpha {
          background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAwAAAAMCAIAAADZF8uwAAAAGUlEQVQYV2M4gwH+YwCGIasIUwhT25BVBADtzYNYrHvv4gAAAABJRU5ErkJggg==');
        }
      }
    }
  }
  // 色彩面板
  .fei-color-svpanel {
    position: relative;
    width: 280px;
    height: 180px;
    &__black, &__white {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0
    }
    &__white {
      background: linear-gradient(to right, #fff, rgba(255, 255, 255, 0))
    }
    &__black {
      background: linear-gradient(to top, #000, rgba(0, 0, 0, 0))
    }
    &__cursor {
      position: absolute;
      > div {
        circle-dot()
      }
    }
  }
  .fei-color-dropdown__btns {
    margin-top: 6px;
    text-align: right;
  }
  .fei-color-dropdown__value {
    float: left;
    line-height: 24px;
    color: #000;
    width: 200px;
    .fei-input {
      font-size: 12px;
      padding: 0 10px;
    }
  }
}

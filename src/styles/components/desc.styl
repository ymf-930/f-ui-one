.fei-desc {
  box-sizing: border-box;
  font-size: var(--fei-base-font-size);
  color: var(--fei-color-text-primary);
  &__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    font-weight: 500;
  }
  &__title {
    font-weight: 500;
  }
  &__body {
    color: var(--fei-color-text-default);
    background-color: #fff;
    table {
      border-collapse: collapse;
      border-spacing: 0;
      width: 100%;
      border: none;
      tr {
        vertical-align: top;
      }
      td, th {
        background-color: #fff;
        text-align: left;
        font-weight: 500;
        line-height: var(--fei-base-line-height);
      }
    }
    :not(.is-bordered) td, :not(.is-bordered) th {
      padding: 0 0 16px 0;
      border: none;
    }
  }
  &__label {
    color: var(--fei-color-text-primary);
    &:not(.is-bordered-label) {
      font-weight: 500;
      &::after {
        content: ':';
        position: relative;
        top: -.5px;
        margin: 0 8px 0 2px;
      }
    }
    &.is-bordered-label {
      background: #fafafa;
    }
  }
  .is-bordered {
    th, td {
      border: 1px solid var(--fei-border-table-color);
      padding: 10px;
    }
  }

  .fei-desc--large {
    font-size: 14px;
    &.is-bordered {
      th, td {
        padding: 12px 10px;
      }
    }
    &:not(.is-bordered) {
      th, td {
        padding-bottom: 12px;
      }
    }
  }
  .fei-desc--small {
    font-size: 13px;
    &.is-bordered {
      th, td {
        padding: 8px 10px;
      }
    }
    &:not(.is-bordered) {
      th, td {
        padding-bottom: 8px;
      }
    }
  }
  .fei-desc--mini {
    font-size: 12px;
    &.is-bordered {
      th, td {
        padding: 6px 10px;
      }
    }
    &:not(.is-bordered) {
      th, td {
        padding-bottom: 6px;
      }
    }
  }
}

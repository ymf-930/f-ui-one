.fei-steps {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  font-size: 0;
  line-height: 1.5;

  &-item {
    display: inline-block;
    position: relative;
    vertical-align: top;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    overflow: hidden;
    &:last-child {
      -webkit-box-flex: 0;
      -ms-flex: 0;
      flex: none;
    }

    &.fei-steps-status-wait {
      .fei-steps-head-inner {
        background-color: #fff;
        > .fei-steps-icon, span {
          color: var(--fei-color-text-disabled);
        }
      }
      .fei-steps-title {
        color: var(--fei-color-text-secondary);
      }
      .fei-steps-content {
        color: var(--fei-color-text-secondary);
      }
      .fei-steps-tail > i {
        background-color: var(--fei-border-color-base);
      }
    }
    &.fei-steps-status-process {
      .fei-steps-head-inner {
        border-color: var(--fei-color-primary);
        background-color: var(--fei-color-primary);
        > .fei-steps-icon, span {
          color: #fff;
        }
      }
      .fei-steps-title {
        color: var(--fei-color-text-primary);
      }
      .fei-steps-content {
        color: var(--fei-color-text-default);
      }
      .fei-steps-tail > i {
        background-color: var(--fei-border-color-base);
      }
    }
    &.fei-steps-status-finish {
      .fei-steps-head-inner {
        background-color: #fff;
        border-color: var(--fei-color-primary);
        > .fei-steps-icon, span {
          color: var(--fei-color-primary);
        }
      }
      .fei-steps-tail > i:after {
        width: 100%;
        background: var(--fei-color-primary);
        transition: var(--fei-animation-duration-base) ease-in-out;
        opacity: 1;
      }
      .fei-steps-title {
        color: var(--fei-color-text-secondary);
      }
      .fei-steps-content {
        color: var(--fei-color-text-secondary);
      }
    }
    &.fei-steps-status-success {
      .fei-steps-head-inner {
        background-color: #fff;
        border-color: var(--fei-color-success);
        > .fei-steps-icon {
          color: var(--fei-color-success);
        }
        span {
          color: var(--fei-color-success);
        }
      }
      .fei-steps-title {
        color: var(--fei-color-success);
      }
      .fei-steps-content {
        color: var(--fei-color-success);
      }
      .fei-steps-tail > i {
        background-color: var(--fei-border-color-base);
      }
    }

    &.fei-steps-next-success {
      .fei-steps-tail > i,
      .fei-steps-tail > i:after {
        background-color: var(--fei-color-success);
      }
    }

    &.fei-steps-status-error {
      .fei-steps-head-inner {
        background-color: #fff;
        border-color: var(--fei-color-danger);
        > .fei-steps-icon {
          color: var(--fei-color-danger);
        }
      }
      .fei-steps-title {
        color: var(--fei-color-danger);
      }
      .fei-steps-content {
        color: var(--fei-color-danger);
      }
      .fei-steps-tail > i {
        background-color: var(--fei-border-color-base);
      }
    }

    &.fei-steps-next-error {
      .fei-steps-tail > i,
      .fei-steps-tail > i:after {
        background-color: var(--fei-color-danger);
      }
    }

    &.fei-steps-custom {
      .fei-steps-head-inner {
        background: none;
        border: 0;
        width: auto;
        height: auto;
        > .fei-steps-icon {
          font-size: 20px;
          top: 2px;
          width: 20px;
          height: 20px;
        }
      }
      &.fei-steps-status-process {
        .fei-steps-head-inner > .fei-steps-icon {
          color: var(--fei-color-primary);
        }
      }
    }
  }
  &-item:last-child &-tail {
    display: none;
  }

  .fei-steps-head,
  .fei-steps-main {
    position: relative;
    display: inline-block;
    vertical-align: top;
  }
  .fei-steps-head {
    background: #fff;
  }

  .fei-steps-head-inner {
    display: block;
    width: 26px;
    height: 26px;
    line-height: 24px;
    margin-right: 8px;
    text-align: center;
    border: 1px solid var(--fei-color-text-disabled);
    border-radius: 50%;
    font-size: 14px;
    transition: background-color var(--fei-animation-duration-base) ease-in-out;

    > .fei-steps-icon {
      line-height: 1;
      position: relative;
      vertical-align: -1px;

      &.b-iconfont {
        font-size: 16px;
      }
      .icon-ios-checkmark-empty,
      .icon-ios-close-empty {
        font-weight: bold;
      }
    }
  }
  .fei-steps-main {
    margin-top: 2.5px;
    display: inline;
  }
  .fei-steps-custom .fei-steps-title {
    margin-top: 2.5px;
  }

  .fei-steps-title {
    display: inline-block;
    margin-bottom: 4px;
    padding-right: 10px;
    font-size: 14px;
    font-weight: bold;
    color: var(--fei-color-text-primary);
    background: #fff;

    > a:first-child:last-child {
      color: var(--fei-color-text-primary);
    }
  }
  .fei-steps-item-last {
    .fei-steps-title {
      padding-right: 0;
      width: 100%;
    }
  }
  .fei-steps-content {
    font-size: 12px;
    color: #999;
  }
  .fei-steps-tail {
    width: 100%;
    padding: 0 10px;
    position: absolute;
    left: 0;
    top: 13px;
    > i {
      display: inline-block;
      width: 100%;
      height: 1px;
      vertical-align: top;
      background: var(--fei-border-color-base);
      border-radius: 1px;
      position: relative;
      &:after {
        content: '';
        width: 0;
        height: 100%;
        background: var(--fei-border-color-base);
        opacity: 0;
        position: absolute;
        top: 0;
      }
    }
  }

  &.fei-steps-small {
    .fei-steps-head-inner {
      width: 18px;
      height: 18px;
      line-height: 16px;
      margin-right: 10px;
      text-align: center;
      border-radius: 50%;
      font-size: 12px;

      > .fei-steps-icon.b-iconfont {
        font-size: 12px;
        top: 0;
      }
    }
    .fei-steps-main {
      margin-top: 0;
    }
    .fei-steps-title {
      margin-bottom: 4px;
      margin-top: 0;
      color: var(--fei-color-text-primary);
      font-size: 12px;
      font-weight: bold;
    }
    .fei-steps-content {
      font-size: 12px;
      color: var(--fei-color-text-default);
      padding-left: 30px;
    }
    .fei-steps-tail {
      top: 8px;
      padding: 0 8px;
      > i {
        height: 1px;
        width: 100%;
        border-radius: 1px;
      }
    }
  }

  &.fei-steps-small .fei-steps-item.fei-steps-custom .fei-steps-head-inner,
  .fei-steps-item.fei-steps-custom .fei-steps-head-inner {
    width: inherit;
    height: inherit;
    line-height: inherit;
    border-radius: 0;
    border: 0;
    background: none;
  }
}

.fei-steps-vertical {
  display: block;
  .fei-steps-item {
    display: block;
    overflow: visible;
  }

  .fei-steps-tail {
    position: absolute;
    left: 13px;
    top: 0;
    height: 100%;
    width: 1px;
    padding: 30px 0 4px 0;
    > i {
      height: 100%;
      width: 1px;
      &:after {
        height: 0;
        width: 100%;
      }
    }
  }

  .fei-steps-status-finish {
    .fei-steps-tail > i:after {
      height: 100%;
    }
  }

  .fei-steps-head {
    float: left;
    &-inner {
      margin-right: 16px;
    }
  }

  .fei-steps-main {
    min-height: 47px;
    overflow: hidden;
    display: block;
    .fei-steps-title {
      line-height: 26px;
    }
    .fei-steps-content {
      padding-bottom: 12px;
      padding-left: 0;
    }
  }

  .fei-steps-custom .fei-steps-icon {
    left: 4px;
  }
  &.fei-steps-small .fei-steps-custom .fei-steps-icon {
    left: 0;
  }
}

.fei-steps-vertical.fei-steps-small {
  .fei-steps-tail {
    position: absolute;
    left: 9px;
    top: 0;
    padding: 22px 0 4px 0;
    > i {
      height: 100%;
    }
  }

  .fei-steps-title {
    line-height: 18px;
  }
}

.fei-steps-horizontal {
  &.fei-steps-hidden {
    visibility: hidden;
  }
  .fei-steps-content {
    //max-width: 100px;
    padding-left: 35px;
  }
  .fei-steps-item:not(:first-child) .fei-steps-head {
    padding-left: 10px;
    margin-left: -10px;
  }
}

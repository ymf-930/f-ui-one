.fei-empty {
  margin: 0 8px;
  font-size: var(--fei-base-font-size);
  line-height: 22px;
  text-align: center;
  .fei-empty-image {
    height: 100px;
    margin-bottom: 8px;
    svg {
      height: 100%;
      margin: auto;
    }
  }
  .fei-empty-description {
    color: var(--fei-color-text-secondary);
    margin: 0;
  }
}
.fei-empty-normal {
  margin: 32px 0;
  color: var(--fei-color-text-disabled);
  .fei-empty-image {
    height: 40px;
  }
}
.fei-empty-img-simple-ellipse {
  fill: #f5f5f5;
}
.fei-empty-img-simple-g {
  stroke: #d9d9d9;
}
.fei-empty-img-simple-path {
  fill: #fafafa;
}
.fei-empty-description {
  margin: 0;
}


placeholder() {
  // Firefox
  &::-moz-placeholder {
    color: var(--fei-color-text-placeholder);
    opacity: 1; // Override Firefox's unusual default opacity; see https://github.com/twbs/bootstrap/pull/11526
  }
  // Internet Explorer 10+
  &:-ms-input-placeholder {
    color: var(--fei-color-text-placeholder)
  }
  // Safari and Chrome
  &::-webkit-input-placeholder {
    color: var(--fei-color-text-placeholder)
  }
}
.fei-input-wrapper {
  display: inline-block;
  vertical-align: middle;
  width: 100%;
  position: relative;
  line-height: var(--fei-base-line-height);
  label {
    display: inline-block;
    width: 100%;
    height: auto;
  }
  &:hover {
    .fei-input-icon-clear {
      display: flex;
      i {
        background-color: #fff;
      }
    }
  }
  .fei-input-icon-clear .f-icon-close-circle-fill {
    vertical-align: baseline;
    cursor: pointer;
    color: var(--fei-color-text-secondary);
  }
  &.fei-input-group-with-prepend, &.fei-input-group-with-append {
    display: inline-flex;
    > .fei-input {
      &:hover, &:focus {
        z-index: 1;
      }
    }
    > .fei-input-suffix, > .fei-input-prefix {
      z-index: 2;
    }
  }
  &.fei-input-group-with-append {
    .fei-input-icon-clear {
      right: 80px;
    }
  }
  &.fei-input-group-with-append {
    display: inline-flex;
  }
  .fei-input-group-prepend, .fei-input-group-append {
    position relative;
  }
  .fei-input-group-prepend {
    right: -1px;
    z-index: 1;
  }

  .fei-input-group-append {
    left: -1px;
  }
}
// 大小设置
.fei-input-wrapper-large {
  .fei-input-with-prefix {
    padding-left: var(--fei-large-height);
  }
  .fei-input-prefix, .fei-input-suffix {
    width: var(--fei-large-height);
  }
}
.fei-input-wrapper-small {
  .fei-input-with-prefix {
    padding-left: var(--fei-small-height);
  }
  .fei-input-prefix, .fei-input-suffix {
    width: var(--fei-small-height);
  }
}
.fei-input-wrapper-mini {
  .fei-input-with-prefix {
    padding-left: var(--fei-mini-height);
  }
  .fei-input-prefix, .fei-input-suffix {
    width: var(--fei-mini-height);
  }
}

.fei-input {
  display: inline-block;
  width: 100%;
  height: var(--fei-default-height);
  line-height: var(--fei-base-line-height);
  padding: 0 12px;
  font-size: var(--fei-font-size-default);
  border: var(--fei-border-base);
  border-radius: var(--fei-border-radius-default);
  color: var(--fei-color-text-default);
  background-color: var(--fei-white-color);
  background-image: none;
  position: relative;
  cursor: text;
  font-weight: normal;
  transition: border var(--fei-animation-duration-base) ease-in-out, background var(--fei-animation-duration-base) ease-in-out, box-shadow var(--fei-animation-duration-base) ease;
  placeholder()
  &:focus, &:hover {
    border-color: var(--fei-color-primary);
  }
  &:focus {
    outline: 0;
    box-shadow: 0 0 0 2px var(--fei-color-input-shadow);
  }
  &.fei-input-with-suffix {
    padding-right: 28px;
  }
  &.fei-input-with-prefix {
    padding-left: 28px;
  }
}
// 大小设置
.fei-input-large {
  height: var(--fei-large-height);
}

.fei-input-small {
  height: var(--fei-small-height);
}

.fei-input-mini {
  height: var(--fei-mini-height);
}
//  图标部分
.fei-input-hide-icon .fei-input-icon, .fei-input-icon-clear, .fei-input-icon-validate {
  display: none;
}
.fei-input-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 32px;
  height: 100%;
  line-height: 1;
  font-size: 14px;
  text-align: center;
  color: var(--fei-color-text-secondary);
  justify-content: center;
  align-items: center;
  &-normal {
    display: flex;
  }
  &-clear {
    z-index: 1;
  }
}
.fei-input-icon-normal + .fei-input {
  padding-right: 36px;
}


.fei-input-prefix, .fei-input-suffix {
  width: 32px;
  height: 100%;
  text-align: center;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  i {
    vertical-align: middle;
    font-size: 14px;
    color: var(--fei-color-text-secondary);
    &.f-icon-close-circle-fill {
      cursor: pointer;
    }
  }
}
.fei-input-suffix {
  left: auto;
  right: 0;
}
//  搜索
.fei-input-search-icon, .fei-input-view-icon {
  cursor: pointer;
  transition: color var(--fei-animation-duration-base) ease-in-out;
  &:hover {
    color: var(--fei-color-text-default);
  }
  &:active {
    color: var(--fei-color-text-secondary);
  }
}
.fei-input-search {
  cursor: pointer;
  padding: 0 16px !important;
  background: var(--fei-color-primary) !important;
  color: #fff !important;
  border-color: var(--fei-color-primary) !important;
  transition: all var(--fei-animation-duration-base) ease-in-out;
  position: relative;
  z-index: 0;
}
textarea.fei-input {
  max-width: 100%;
  height: auto;
  min-height: 32px;
  vertical-align: bottom;
  font-size: var(--fei-font-size-default);
  padding: 4px 7px;
  resize: vertical;
}
.fei-input[disabled], fieldset[disabled] .fei-input {
  opacity: 1;
  cursor: not-allowed;
  background-color: #f9f9f9;
  color: var(--fei-color-text-placeholder);
}

.fei-input-word-count {
  text-align: center;
  position: absolute;
  right: 7px;
  top: 2px;
  bottom: 2px;
  padding-left: 7px;
  background: #fff;
  z-index: 0;
  display: inline-flex;
  align-items: center;
  color: #808695;
  font-size: 12px;
}

.fei-input-type-text.fei-input-with-word-count .fei-input {
  padding-right: 40px;
}
.fei-input-type-textarea.fei-input-with-word-count .fei-input {
  padding-bottom: 16px;
}
.fei-input-type-textarea .fei-input-word-count {
  -webkit-box-align: end;
  -ms-flex-align: end;
  align-items: flex-end;
  top: auto;
  right: 17px;
}

